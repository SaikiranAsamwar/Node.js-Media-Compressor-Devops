# Terraform Variables Configuration

# Copy this file to terraform.tfvars and fill in your values

# AWS Region where resources will be created
aws_region = "us-east-1"

# EC2 instance type (t3.large provides 2 vCPUs and 8GB RAM)
instance_type = "t3.large"

# Your existing EC2 key pair name (create one in AWS Console first)
key_name = "your-key-pair-name"

# Your public IP address for SSH access (find it at https://checkip.amazonaws.com)
# Format: "x.x.x.x/32" (the /32 means only your IP)
your_ip = "0.0.0.0/32"

# Project name for resource tagging
project_name = "compressorr-devops"
